{
    "name": "brickhouse/http-transport",
    "description": "Object-oriented implementation of the HTTP specification",
    "license": "MIT",
    "keywords": [
        "http",
        "rfc2616",
        "psr",
        "psr-7"
    ],
    "authors": [
        {
            "name": "Max T. Kristiansen",
            "email": "me@maxtrier.dk",
            "role": "Author",
            "homepage": "https://maxtrier.dk"
        }
    ],
    "homepage": "https://github.com/brickhouse-php/http-transport",
    "support": {
        "issues": "https://github.com/brickhouse-php/http-transport/issues",
        "source": "https://github.com/brickhouse-php/http-transport"
    },
    "require": {
        "php": "^8.4",
        "ext-mbstring": "*",
        "psr/http-factory": "^1.1",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0"
    },
    "provide": {
        "psr/http-message-implementation": "1.1|2.0",
        "psr/http-factory-implementation": "1.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Brickhouse\\Http\\Transport\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Brickhouse\\Http\\Transport\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
